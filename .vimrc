set nocompatible

filetype on
filetype plugin on
filetype indent on

syntax on

set hidden

set lazyredraw

set showmode

set wildmenu

set wrapscan

set ch=2

set backspace=2

set stl=%f\ %m\ %r\ Line:\ %l/%L[%p%%]\ Col:\ %c\ Buf:\ #%n\ [%b][0x%B]

set laststatus=2

set history=100

set scrolloff=8

set virtualedit=all

set incsearch

set synmaxcol=2048

" colorscheme solarized
set background=light

